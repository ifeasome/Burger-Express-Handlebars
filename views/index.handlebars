<div class="container-fluid">
<h1>The Game of Burger</h1>

<div class="row">
  <center>
    <form class="create-form">

  <div class="form-group">
    <label for="new_burger">Enter New Burger Name:</label>
    <input type="text" id="new_burger" name="burger_name">
  </div>

  <button type="submit">Create!</button>
</form>
   

    <!-- left side -->
   <h2>Burgers In Waiting</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger/burger-devour devoured=true}}
    {{/unless}}
  {{/each}}
</ul>


 <!-- right side -->
<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger/burger-devour devoured=false}}
    {{/if}}
  {{/each}}
</ul>

    

   
    <div class="col-md-4">
      <h3 class="submitHeader">Burgers Devoured!!</h3>
      <div id="burgersDevoured">

        <!-- All Devoured Burgers -->
        {{#each burgers}}
         {{#if this.devoured}}
         <div class="input-group">
           <li class="form-control">{{this.id}} .{{this.burger_name}}</li>
         </div>
         {{/if}}
         {{/each}}
         
      </div>
    </div>
  </center>
</div>
</div>